@model IEnumerable<AppDevGroupCoursework.DTO.LoanDetailDTO>
@{
    ViewData["Title"] = "LoanDetails";
}

<h1>Loan Details</h1>
                    <div class="card shadow mb-4">
<div class="card-body">
<form asp-controller="Loan" asp-action="LoanDetails" method="get">
    <p>
        <select id ="selectOptions" name="selectOptions" class="mr-2">
            <option value="all">All Loan Details</option>
            <option value="loaned">Loan</option>
            <option value="returned">Returned</option>
            <option value="loanfor31days">Loan For 31 Days</option>
        </select>
        Full Name: <input type="text" name="name" class="ml-2 mr-2"/>
        <input type="submit" value="Search" />
    </p>
</form>
<div class="table-responsive">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                Loan Number
            </th>
            <th>
                Full Name
            </th>
            <th>
                DVD Title
            </th>
            <th>
                Copy Number
            </th>
            <th>
                Date Out
            </th>
            <th>
                Due Date
            </th>
            <th>
                Due Days
            </th>
            <th>
               Standard Charge
            </th>
            <th>
                Penalty Charge
            </th>
            <th>
                TotalCharge
            </th>
            <th>
                Status
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.LoanNumber
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.CopyNumber
                </td>
                <td>
                    @item.DateOut
                </td>
                <td>
                    @item.DueDate
                </td>
                <td>
                    @item.NumberOfDays
                </td>
                <td>
                    @item.StandardCharge
                </td>
                <td>
                    @item.PenaltyCharge
                </td>
                <td>
                    @item.TotalCharge
                </td>
                <td>
                    @item.status
                </td>
                
                <td>
                    <div class="form-group">
                        <a asp-controller="Loan" asp-action="UpdateLoan" asp-route-loanNumber="@item.LoanNumber" class="btn btn-primary">Return DVD</a>
                    </div>
                </td>
            </tr>          
        }
    </tbody>
</table>
</div></div></div>

