@model AppDevGroupCoursework.Request.DVDRequest

@{
    ViewData["Title"] = "AddDVDTitle";
}

<h1 class="h3 mb-2 text-gray-800">Add DVD</h1>

<hr />

                    <div class="card shadow mb-4">
<div class="card-body">
<div class="row text-dark">
        <form asp-action="AddDVDTitle">
              <div class="form-row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label asp-for="StudioName" class="control-label">Studio Name</label>
                <input asp-for="StudioName" class="form-control" />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ProducerName" class="control-label">Producer Name</label>
                <input asp-for="ProducerName" class="form-control" />
                <span asp-validation-for="ProducerName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="StandardCharge" class="control-label">Standard Charge</label>
                <input asp-for="StandardCharge" class="form-control" />
                <span asp-validation-for="StandardCharge" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PenaltyCharge" class="control-label">Penalty Charge</label>
                <input asp-for="PenaltyCharge" class="form-control" />
                <span asp-validation-for="PenaltyCharge" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="DvdDescription" class="control-label">Category</label>
                <input asp-for="DvdDescription" class="form-control" />
                <span asp-validation-for="DvdDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check col-md-12 ml-4">
                <label class="form-check-label"></label>
                    <input class="form-check-input" asp-for="AgeRestriction" /> @Html.DisplayNameFor(model => model.AgeRestriction)
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DatePurchased" class="control-label">Purchase Date</label>
                <input asp-for="DatePurchased" class="form-control" />
                <span asp-validation-for="DatePurchased" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="TotalNoCopies" class="control-label">Total no. of Copies</label>
                <input asp-for="TotalNoCopies" class="form-control" />
                <span asp-validation-for="TotalNoCopies" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="castMember.ActorFirstName" class="control-label">Actor first name</label>
                <input asp-for="castMember.ActorFirstName" class="form-control" />
                <span asp-validation-for="castMember.ActorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="castMember.ActorSurname" class="control-label">Actor last name</label>
                <input asp-for="castMember.ActorSurname" class="form-control" />
                <span asp-validation-for="castMember.ActorSurname" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

             <div class="form-group col-md-12 ">
                <a asp-action="Index">Back to List</a>
             
            </div>
            </div>
        </form>

    </div>
</div>
 </div>





