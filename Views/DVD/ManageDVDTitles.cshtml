                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                Title
            </th>
            <th>
                Studio Name
            </th>
            <th>
                Producer Name
            </th>
            <th>
                Cast Members
            </th>
            <th>
                Released Date
            </th>
            <th>
                Category
            </th>
            <th>
                Age Restrictions
            </th>
            <th>
                Number of Copies
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.StudioName
                </td>
                <td>
                    @item.ProducerName
                </td>
                <td>
                <div>
                    <ul>
                        @foreach(var actor in @item.Actors){
                            <li>
                                @actor.actorFirstName @actor.actorSurname
                            </li>
                        
                            }
                    </ul>
                </div>
                </td>
                <td>
                    @item.ReleasedDate 
                </td>
                <td>
                    @item.Category
                </td>
                <td>
                    @item.AgeRestrictions
                </td>
                <td>
                    @item.TotalNumberOfCopies
                </td>
                <td>
                    <div class="form-group">
                        <a asp-controller="DVD" asp-action="DeleteDVDTitle"  asp-route-dVDNumber="@item.DVDNumber" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>  
        }
    </tbody>
</table>
</div>
</div>
</div>


