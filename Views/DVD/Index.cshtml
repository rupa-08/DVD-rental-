@model IEnumerable<AppDevGroupCoursework.DTO.DVDTitleDTO>
@{
    ViewData["Title"] = "Index";
}

<h1>List of DVD Titles</h1>
                    <div class="card shadow mb-4">
<div class="card-body">
<div class="table-responsive">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                TItle
            </th>
            <th>
                Released Date
            </th>
            <th>
                Category
            </th>
            <th>
                Studio Name
            </th>
            <th>
                Producer Name
            </th>
            <th>
                Age Restrictions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.releasedDate
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.SudioName
                </td>
                <td>
                    @item.ProducerName
                </td>
                <td>
                    @item.AgeRestriction
                </td>
            </tr>          
        }
    </tbody>
</table>
</div>
</div>
</div>
