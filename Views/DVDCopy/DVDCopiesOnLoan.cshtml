@model IEnumerable<AppDevGroupCoursework.DTO.DVDCopiesOnLoanDTO>

@{
    ViewData["Title"] = "DVD Copies On Loan";
}

<h1>DVDCopiesOnLoan</h1>
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                Member Name
            </th>
            <th>
                DVD Title
            </th>
            <th>
                Copy Number
            </th>
            <th>
                Date Out
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.name
                </td>
                <td>
                    @item.title
                </td>
                <td>
                    @item.copyNumber
                </td>
                <td>
                    @item.dateOut
                </td>
            </tr>          
        }
    </tbody>
</table>
</div>
</div>
</div>


