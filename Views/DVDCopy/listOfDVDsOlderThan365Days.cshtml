@model IEnumerable<AppDevGroupCoursework.Models.DVDCopy>;

@{
    ViewData["Title"] = "listOfDVDsOlderThan365Days";
}

<h1>DVDs older than 365 days.</h1>
                    <div class="card shadow mb-4">
<div class="card-body">
<div class="table-responsive">
<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                DVD Title
            </th>
            <th>
                Copy Number
            </th>
            <th>
                Date Purchased
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model == null)
        {
            <div> no data available</div>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.dVDTitle.title
                </td>
                <td>
                    @item.copyNumber
                </td>
                <td>
                    @item.datePurchased
                </td>
            </tr>          
        }
    </tbody>
    <form asp-action="deleteListOfDVDsOlderThan365Days">
            <div class="form-group">
                <input type="submit" value="Delete All" class="btn btn-danger" />
            </div>
    </form>
</table>
</div>
</div>
</div>
