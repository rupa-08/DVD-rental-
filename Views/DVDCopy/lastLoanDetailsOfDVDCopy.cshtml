@model IEnumerable<AppDevGroupCoursework.DTO.DVDCopyDetailDTO>

@{
    ViewData["Title"] = "lastLoanDetailsOfDVDCopy";
}
<h1>lastLoanDetailsOfDVDCopy</h1>
                    <div class="card shadow mb-4">
                        <div class="card-body">
<form asp-controller="DVDCopy" asp-action="lastLoanDetailsOfDVDCopy" method="get">
    <p>
        Copy Number: <input type="text" name="copyNumber" class="ml-2 mr-2"/>
        <input type="submit" value="Search" />
    </p>
</form>

                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                Full Name
            </th>
            <th>
               Title
            </th>
            <th>
                Copy Number
            </th>
            <th>
                Date Out
            </th>
            <th>
                Due Date
            </th>
            <th>
                Date Returned
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.CopyNumber
                </td>
                <td>
                    @item.DateOut
                </td>
                <td>
                    @item.DueDate
                </td>
                <td>
                    @item.DateReturned
                </td>
            </tr>          
        }
    </tbody>
</table>
</div>
</div>
</div>
